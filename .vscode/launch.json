    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build main file - NVCC"
        },
        {
            "name": "(gdb) Launch Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/main_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build tests file - NVCC"
        },
        {
            "name": "CUDA Launch - ACC GSW",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/debug/acc_gsw",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build lib acc_gsw - NVCC"
        },
        {
            "name": "CUDA Launch - Cipher Image",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/debug/cipher_image",
            "args": "10 ./resources/sample_6.bmp ./result/sample_6.cbmp",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build cipher_image - NVCC"
        }

    ]
}